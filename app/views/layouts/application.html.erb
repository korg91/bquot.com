<html class="no-js">
	<head>
		<title>BookmarkQ | Create short URL to a quote on a Web site</title>
		<meta name="keywords" content="bquot, BookmarkQ, bookmarking tool, url shortener, quote, citation" />
		<meta name="description" content="BookmarkQ is used to create easily shareable short URL to a any text (quote, citation) on a Web site." />
		<link rel="image_src" href="<%= image_path('logo.png') %>" />
		<%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/themes/smoothness/jquery-ui.css" %>
		<%= stylesheet_link_tag "home.css" %>
		<%= javascript_include_tag "jquery-1.6.1.min.js" %>
		<%= javascript_include_tag "jquery-ui-1.8.13.min.js" %>
		<%= csrf_meta_tag %>

		<!-- Google +1 -->
		<script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>

		<!-- Feedback widget -->
		<script type="text/javascript" charset="utf-8">
			var is_ssl = ("https:" == document.location.protocol);
			var asset_host = is_ssl ? "https://s3.amazonaws.com/getsatisfaction.com/" : "http://s3.amazonaws.com/getsatisfaction.com/";
			document.write(unescape("%3Cscript src='" + asset_host + "javascripts/feedback-v2.js' type='text/javascript'%3E%3C/script%3E"));
		</script>
		<script type="text/javascript" charset="utf-8">
			var feedback_widget_options = {};
			feedback_widget_options.display = "overlay";
			feedback_widget_options.company = "bookmarkq";
			feedback_widget_options.placement = "left";
			feedback_widget_options.color = "#222";
			feedback_widget_options.style = "idea";
			var feedback_widget = new GSFN.feedback_widget(feedback_widget_options);
		</script>

		<%= yield(:head) -%>
	</head>
